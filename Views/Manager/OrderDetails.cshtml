@model OKNODOM.DTOs.OrderDetailsManagerViewModel
@{
    ViewData["Title"] = $"Заказ №{Model.Заказ.КодЗаказа}";
    var canConfigure = Model.МожноКонфигурировать;
    var hasConfiguration = Model.ТекущиеТовары.Any() || Model.ТекущиеУслуги.Any();
}

<div class="order-details-manager-section">
    <div class="container">

        <!-- Шапка с навигацией -->
        <div class="header-action-row">
            <h2>Детали по заказу №@Model.Заказ.КодЗаказа</h2>
            <a asp-action="ManagerDashboard" asp-controller="Account" class="action-btn primary">
                ⭠ Назад к списку
            </a>
        </div>

        <!-- Уведомления -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert-success">
                <span>@TempData["SuccessMessage"]</span>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert-error">
                <span>@TempData["ErrorMessage"]</span>
            </div>
        }

        <!-- Основная сетка: 2/3 контент, 1/3 действия -->
        <div class="order-details-grid">

            <!-- Левая колонка: детали заказа -->
            <div class="detail-card">
                <div class="card-header-main">
                    <span class="order-card-title">
                        Заказ №@Model.Заказ.КодЗаказа
                    </span>
                    <span class="order-status">
                        @Model.Заказ.КодСтатусаЗаказаNavigation.Название
                    </span>
                </div>

                <!-- Основная информация -->
                <div class="detail-group">
                    <span class="detail-label">Дата создания:</span>
                    <span class="detail-value">@Model.Заказ.ДатаСозданияЗаказа.ToString("dd.MM.yyyy HH:mm")</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">Адрес установки:</span>
                    <span class="detail-value">@Model.Заказ.Адрес</span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">Общая сумма:</span>
                    <span class="detail-value">
                        @Model.ОбщаяСумма.ToString("N0") Р
                    </span>
                </div>
                <div class="detail-group">
                    <span class="detail-label">Статус оплаты:</span>
                    <span class="detail-value">
                        @if (Model.Заказ.СтатусОплаты)
                        {
                            <span class="payment-badge paid">Оплачен</span>
                        }
                        else
                        {
                            <span class="payment-badge unpaid">Не оплачен</span>
                        }
                    </span>
                </div>

                <!-- Информация о клиенте -->
                <div class="mt-4">
                    <h4 class="client-section-header">
                        Информация о клиенте
                    </h4>

                    <div class="detail-group">
                        <span class="detail-label">ФИО:</span>
                        <span class="detail-value">
                            @Model.Клиент.Фамилия @Model.Клиент.Имя @Model.Клиент.Отчество
                        </span>
                    </div>
                    <div class="detail-group">
                        <span class="detail-label">Телефон:</span>
                        <span class="detail-value">
                            <a href="tel:@Model.Клиент.Телефон" class="contact-link">
                                @Model.Клиент.Телефон
                            </a>
                        </span>
                    </div>
                    <div class="detail-group">
                        <span class="detail-label">Email:</span>
                        <span class="detail-value">
                            <a href="mailto:@Model.Клиент.Логин" class="contact-link">
                                @Model.Клиент.Логин
                            </a>
                        </span>
                    </div>
                </div>

                <!-- Комментарий -->
                @if (!string.IsNullOrEmpty(Model.Заказ.ПримечаниеКЗаказу))
                {
                    <div class="comment-box">
                        <div class="comment-header">
                            <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor"><path d="M21.99 4c0-1.1-.89-2-1.99-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h14l4 4-.01-18zM18 14H6v-2h12v2zm0-3H6V9h12v2zm0-3H6V6h12v2z" /></svg>
                            Комментарий к заказу
                        </div>
                        <div class="comment-body">
                            @Model.Заказ.ПримечаниеКЗаказу
                        </div>
                    </div>
                }
            </div>

            <!-- Правая колонка: действия -->
            <div class="action-card">
                <!-- Блок замера -->
                <div class="card-header-main">
                    @if (Model.Заказ.КодСтатусаЗаказа == 1)
                    {
                        <span class="section-header-with-icon">
                            Назначение замерщика
                        </span>
                    }
                    else
                    {
                        <span class="section-header-with-icon">
                            Информация о замере
                        </span>
                    }
                </div>

                @if (Model.Заказ.КодСтатусаЗаказа == 1)
                {
                    <form asp-controller="Manager" asp-action="AssignMeasurer" method="post" class="measurer-form">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="КодЗаказа" value="@Model.Заказ.КодЗаказа" />

                        <div class="form-group">
                            <label class="form-label">Выберите замерщика</label>
                            <select name="КодЗамерщика" class="form-input" required>
                                <option value="">-- Выберите замерщика --</option>
                                @foreach (var measurer in Model.Замерщики)
                                {
                                    <option value="@measurer.КодПользователя">
                                        @measurer.Фамилия @measurer.Имя @measurer.Отчество
                                        @if (!string.IsNullOrEmpty(measurer.Телефон))
                                        {
                                            <text>(@measurer.Телефон)</text>
                                        }
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label class="form-label">Дата и время замера</label>
                            <input type="datetime-local" name="ДатаЗамера" class="form-input"
                                   min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" required />
                        </div>

                        <button type="submit" class="main-cta-button full-width">
                            Назначить замерщика
                        </button>
                    </form>
                }
                else if (Model.ТекущийЗамер != null)
                {
                    var measurer = Model.ТекущийЗамер.КодЗамерщикаNavigation;
                    if (measurer != null)
                    {
                        <div class="measurer-info">
                            <div>
                                <div class="measurer-name">
                                    @measurer.Фамилия @measurer.Имя @measurer.Отчество
                                </div>
                                @if (!string.IsNullOrEmpty(measurer.Телефон))
                                {
                                    <div class="measurer-phone">
                                        @measurer.Телефон
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    <div class="stat-item">
                        <div class="stat-label">Дата замера</div>
                        <div class="stat-value">
                            @if (Model.ТекущийЗамер.ДатаЗамера.HasValue)
                            {
                                @Model.ТекущийЗамер.ДатаЗамера.Value.ToString("dd.MM.yyyy HH:mm")
                            }
                            else
                            {
                                <span class="text-muted">Не указана</span>
                            }
                        </div>
                    </div>

                    <!-- Отображение назначенных монтажников -->
                    @if (Model.НазначенныеМонтажники.Any())
                    {
                        <div class="card-header-main">
                            <span class="section-header-with-icon">Назначенная бригада</span>
                        </div>
                        <div class="assigned-brigade-list">
                            @foreach (var montazhnik in Model.НазначенныеМонтажники)
                            {
                                <div class="assigned-brigade-item">
                                    <div class="brigade-member-name">
                                        @montazhnik.Фамилия @montazhnik.Имя @(montazhnik.Отчество ?? "")
                                    </div>
                                    @if (!string.IsNullOrEmpty(montazhnik.Телефон))
                                    {
                                        <div class="brigade-member-phone">@montazhnik.Телефон</div>
                                    }
                                </div>
                            }
                        </div>
                    }

                    <!-- Форма назначения (показывается только если ещё не назначена) -->
                    @if (!Model.НазначенныеМонтажники.Any())
                    {
                        <div class="card-header-main">
                            <span class="section-header-with-icon">Назначение бригады</span>
                        </div>
                        <form asp-controller="Manager" asp-action="AssignBrigade" method="post" class="measurer-form">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="OrderId" value="@Model.Заказ.КодЗаказа" />
                            <div class="form-group">
                                <label class="form-label">Выберите монтажников</label>
                                <select name="BrigadierIds" class="form-input" multiple size="5" required>
                                    @foreach (var brig in Model.Бригадиры)
                                    {
                                        <option value="@brig.КодПользователя">
                                            @brig.Фамилия @brig.Имя @brig.Отчество
                                            @if (!string.IsNullOrEmpty(brig.Телефон))
                                            {
                                                <text>(@brig.Телефон)</text>
                                            }
                                        </option>
                                    }
                                </select>
                            </div>
                            <button type="submit" class="main-cta-button full-width">
                                Назначить бригаду
                            </button>
                        </form>
                    }
                    @if (Model.ТекущийЗамер.ОконныеПроемы != null)
                    {
                        <div class="proem-header">
                            Оконные проемы
                        </div>
                        <div id="proems">
                            @foreach (var проем in Model.ТекущийЗамер.ОконныеПроемы)
                            {
                                <div class="proem-item">
                                    <div class="proem-fields-row">
                                        <div class="field-item">
                                            <label class="form-label">Этаж</label>
                                            <div>@проем.Этаж</div>
                                        </div>
                                        <div class="field-item">
                                            <label class="form-label">Ширина, мм</label>
                                            <div>@проем.Ширина</div>
                                        </div>
                                        <div class="field-item">
                                            <label class="form-label">Высота, мм</label>
                                            <div>@проем.Высота</div>
                                        </div>
                                    </div>
                                    @if (!string.IsNullOrEmpty(проем.Описание))
                                    {
                                        <div class="proem-description">
                                            <label class="form-label">Описание</label>
                                            <div class="proem-description-text">
                                                @проем.Описание
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    }
                }
                else if (Model.Заказ.КодСтатусаЗаказа > 1)
                {
                    <div class="empty-state-message">
                        Информация о замере отсутствует
                    </div>
                }

                <!-- Быстрая конфигурация -->
                @if (canConfigure)
                {
                    <div class="card-header-main config-header">
                        Конфигурация заказа
                    </div>

                    <div class="config-button-wrapper">
                        <a asp-action="OrderConfigure" asp-controller="Manager"
                           asp-route-id="@Model.Заказ.КодЗаказа"
                           class="main-cta-button full-width">
                            Настроить конфигурацию
                        </a>
                    </div>

                    <!-- Сводка -->
                    <div class="configuration-summary">
                        <h4 class="summary-header">
                            Сводка
                        </h4>
                        <div class="info-group">
                            <span class="info-label">Общая сумма</span>
                            <span class="info-value">@Model.ОбщаяСумма.ToString("N0") ₽</span>
                        </div>
                        <div class="info-group">
                            <span class="info-label">Товаров</span>
                            <span class="info-value">@Model.ТекущиеТовары.Sum(t => t.Количество) шт.</span>
                        </div>
                        <div class="info-group">
                            <span class="info-label">Услуг</span>
                            <span class="info-value">@Model.ТекущиеУслуги.Sum(u => u.Количество) шт.</span>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Текущая конфигурация (ниже сетки) -->
      <div class="detail-card config-section">
    <div class="card-header-main">
        Текущая конфигурация
    </div>

    @if (hasConfiguration)
    {
            // Группируем товары прямо в представлении
        var сгруппированныеТовары = Model.ТекущиеТовары
            .GroupBy(t => t.КодТовара)
            .Select(g => new
            {
                Товар = g.First().КодТовараNavigation,
                ОбщееКоличество = g.Sum(x => x.Количество),
                ЦенаНаМоментЗаказа = g.First().ЦенаНаМоментЗаказа,
                Детали = g.ToList(),
                ЯвляетсяОкном = g.First().КодТовараNavigation?.Окна != null,
                Проёмы = g.Where(d => d.КодОконногоПроема.HasValue)
                            .Select(d => d.КодОконногоПроема.Value)
                            .Distinct(),
                ЕстьБезПроема = g.Any(d => !d.КодОконногоПроема.HasValue)
            })
            .ToList();

        <div class="config-table-wrapper">
            <table class="config-table">
                <thead>
                    <tr>
                        <th>Наименование</th>
                        <th class="center">Тип</th>
                        <th class="center">Кол-во</th>
                        <th class="center">Цена за ед.</th>
                        <th class="right">Сумма</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var группа in сгруппированныеТовары)
                    {
                        var размеры = группа.ЯвляетсяОкном
                            ? $"{группа.Товар.Окна.Ширина}×{группа.Товар.Окна.Высота} мм"
                            : группа.Товар.Комплектующие != null
                                ? $"{группа.Товар.Комплектующие.ШиринаМм}×{группа.Товар.Комплектующие.ДлинаМм} мм"
                                : "";
                        var сумма = группа.ЦенаНаМоментЗаказа * группа.ОбщееКоличество;

                        <tr>
                            <td>
                                <div class="product-name">@группа.Товар?.Название</div>
                                @if (!string.IsNullOrEmpty(размеры))
                                {
                                    <div class="product-details">@размеры</div>
                                }
                                
                                
                                @if (группа.Детали.First().ГарантияМесяцев > 0)
                                {
                                    var гарантияДо = группа.Детали.First().ГарантияДо;
                                    <div class="product-warranty">
                                        Гарантия: @группа.Детали.First().ГарантияМесяцев мес.
                                        @if (гарантияДо.HasValue)
                                        {
                                            <text> до @гарантияДо.Value.ToString("dd.MM.yyyy")</text>
                                        }
                                    </div>
                                }
                            </td>
                            <td class="center">
                                @if (группа.ЯвляетсяОкном)
                                {
                                    <span class="type-badge window">Окно</span>
                                }
                                else
                                {
                                    <span class="type-badge accessory">Комплектующее</span>
                                }
                            </td>
                            <td class="center">@группа.ОбщееКоличество шт.</td>
                            <td class="center">@группа.ЦенаНаМоментЗаказа.ToString("N0") Р</td>
                            <td class="right bold">@сумма.ToString("N0") Р</td>
                        </tr>
                    }
                    
                    @* Услуги (они уже сгруппированы в модели) *@
                    @foreach (var услуга in Model.ТекущиеУслуги)
                    {
                        var услугаInfo = услуга.КодУслугиNavigation;
                        var сумма = услуга.ЦенаНаМоментЗаказа * услуга.Количество;

                        <tr>
                            <td>
                                <div class="product-name">@услугаInfo?.Название</div>
                                @if (!string.IsNullOrEmpty(услугаInfo?.Описание))
                                {
                                    <div class="product-details">@услугаInfo.Описание</div>
                                }
                            </td>
                            <td class="center">
                                <span class="type-badge service">Услуга</span>
                            </td>
                            <td class="center">@услуга.Количество шт.</td>
                            <td class="center">@услуга.ЦенаНаМоментЗаказа.ToString("N0") Р</td>
                            <td class="right bold">@сумма.ToString("N0") Р</td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="4" class="right bold">Товары:</td>
                        <td class="right bold">@Model.СуммаТоваров.ToString("N0") Р</td>
                    </tr>
                    <tr>
                        <td colspan="4" class="right bold">Услуги:</td>
                        <td class="right bold">@Model.СуммаУслуг.ToString("N0") Р</td>
                    </tr>
                    <tr class="total-row">
                        <td colspan="4" class="right">Итого:</td>
                        <td class="right">@Model.ОбщаяСумма.ToString("N0") Р</td>
                    </tr>
                </tfoot>
            </table>
        </div>
    }
    else
    {
        <div class="empty-config-state">
            <div class="empty-config-title">Конфигурация ещё не задана</div>
            @if (canConfigure)
            {
                <div class="empty-config-text">
                    Используйте форму справа для добавления товаров и услуг
                </div>
            }
        </div>
    }
</div>

    </div>
</div>
