@model OKNODOM.DTOs.ProductEditModel
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = Model.КодТовара.HasValue ? "Редактировать товар" : "Добавить товар";

    var profiles = ViewBag.Profiles as List<OKNODOM.Models.Профили> ?? new();
    var glassUnits = ViewBag.GlassUnits as List<OKNODOM.Models.Стеклопакеты> ?? new();
    var accessoryTypes = ViewBag.AccessoryTypes as List<OKNODOM.Models.ТипыКомплектующих> ?? new();
    var materials = ViewBag.Materials as List<OKNODOM.Models.Материалы> ?? new();
}


    <div class="header-action-row">
    <h3>@ViewData["Title"]</h3>
    <a asp-action="Products" class="action-btn primary">← Назад к списку</a>
    </div>


<div class="form-section">
    <form asp-action="SaveProduct" method="post" class="product-form">
        @Html.AntiForgeryToken()
        @if (Model.КодТовара.HasValue)
        {
            <input type="hidden" asp-for="КодТовара" />
        }
        <input type="hidden" asp-for="КодТипаТовара" />

        <div class="form-card">
            <h4 class="form-card-title">Основная информация</h4>

            <div class="form-group">
                <label class="form-label" asp-for="Название">Название *</label>
                <input asp-for="Название" class="form-input" required />
                <span asp-validation-for="Название" class="text-danger"></span>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label" asp-for="Цена">Цена *</label>
                    <input asp-for="Цена" type="number" step="0.01" class="form-input" required />
                    <span asp-validation-for="Цена" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="form-label" asp-for="Цвет">Цвет</label>
                    <input asp-for="Цвет" class="form-input" />
                </div>
            </div>

            <div class="checkbox-group">
                <label class="checkbox-label">
                    <input asp-for="Активный" type="checkbox" class="checkbox-input" />
                    <span class="checkbox-custom"></span>
                    <span class="checkbox-text">Активный</span>
                </label>
            </div>
        </div>

        <!-- Поля для окон -->
        @if (Model.КодТипаТовара == 1)
        {
            <div class="form-card">
                <h4 class="form-card-title">Параметры окна</h4>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label" asp-for="КодПрофиля">Профиль *</label>
                        <select asp-for="КодПрофиля" class="form-input" required>
                            <option value="">-- Выберите профиль --</option>
                            @foreach (var p in profiles)
                            {
                                <option value="@p.КодПрофиля">@p.Название</option>
                            }
                        </select>
                        <span asp-validation-for="КодПрофиля" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="КодСтеклопакета">Стеклопакет *</label>
                        <select asp-for="КодСтеклопакета" class="form-input" required>
                            <option value="">-- Выберите стеклопакет --</option>
                            @foreach (var g in glassUnits)
                            {
                                <option value="@g.КодСтеклопакета">@g.Название</option>
                            }
                        </select>
                        <span asp-validation-for="КодСтеклопакета" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label" asp-for="Ширина">Ширина (мм) *</label>
                        <input asp-for="Ширина" type="number" class="form-input" required />
                        <span asp-validation-for="Ширина" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="Высота">Высота (мм) *</label>
                        <input asp-for="Высота" type="number" class="form-input" required />
                        <span asp-validation-for="Высота" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="КоличествоСтворок">Количество створок *</label>
                        <input asp-for="КоличествоСтворок" type="number" class="form-input" required />
                        <span asp-validation-for="КоличествоСтворок" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label" asp-for="БазоваяГарантияМесяцев">Базовая гарантия (месяцев)</label>
                        <input asp-for="БазоваяГарантияМесяцев" type="number" class="form-input" />
                    </div>
                    <div class="checkbox-group">
                        <label class="checkbox-label">
                            <input asp-for="Стандартное" type="checkbox" class="checkbox-input" />
                            <span class="checkbox-custom"></span>
                            <span class="checkbox-text">Стандартное</span>
                        </label>
                    </div>
                </div>
            </div>
        }

        <!-- Поля для комплектующих -->
        @if (Model.КодТипаТовара == 2)
        {
            <div class="form-card">
                <h4 class="form-card-title">Параметры комплектующего</h4>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label" asp-for="КодТипаКомплектующего">Тип комплектующего *</label>
                        <select asp-for="КодТипаКомплектующего" class="form-input" required>
                            <option value="">-- Выберите тип --</option>
                            @foreach (var t in accessoryTypes)
                            {
                                <option value="@t.КодТипа">@t.Название</option>
                            }
                        </select>
                        <span asp-validation-for="КодТипаКомплектующего" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="КодМатериала">Материал</label>
                        <select asp-for="КодМатериала" class="form-input">
                            <option value="">-- Не выбрано --</option>
                            @foreach (var m in materials)
                            {
                                <option value="@m.КодМатериала">@m.Название</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label" asp-for="ДлинаМм">Длина (мм)</label>
                        <input asp-for="ДлинаМм" type="number" class="form-input" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="ШиринаМм">Ширина (мм)</label>
                        <input asp-for="ШиринаМм" type="number" class="form-input" />
                    </div>
                    <div class="form-group">
                        <label class="form-label" asp-for="ВесКг">Вес (кг)</label>
                        <input asp-for="ВесКг" type="number" step="0.01" class="form-input" />
                    </div>
                </div>
            </div>
        }

        <div class="form-actions">
            <button type="submit" class="action-btn primary">
                @(Model.КодТовара.HasValue ? "Сохранить изменения" : "Добавить товар")
            </button>
            <a asp-action="Products" class="action-btn secondary">Отмена</a>
        </div>
    </form>
</div>

<style>
    .form-section {
        padding: 20px 0;
    }

    .product-form {
        max-width: 800px;
        margin: 0 auto;
    }

    .form-card {
        background: var(--color-light);
        border-radius: 8px;
        padding: 25px;
        margin-bottom: 25px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        border: 1px solid #e0e0e0;
    }

    .form-card-title {
        color: var(--color-dark);
        font-size: 1.2rem;
        margin-bottom: 20px;
        padding-bottom: 12px;
        border-bottom: 1px solid #eee;
        font-weight: 600;
    }

    .form-group {
        margin-bottom: 20px;
    }




    .form-row {
        display: flex;
        gap: 20px;
        margin-bottom: 20px;
    }

        .form-row .form-group {
            flex: 1;
            margin-bottom: 0;
        }



    /* Кнопки */
    .form-actions {
        display: flex;
        gap: 15px;
        margin-top: 30px;
        padding-top: 20px;
        border-top: 1px solid #eee;
    }

        .form-actions .action-btn {
            padding: 12px 30px;
            font-size: 1rem;
        }

    .action-btn.primary {
        background: var(--color-primary);
        color: var(--color-dark);
        border: 1px solid var(--color-primary);
    }

        .action-btn.primary:hover {
            background: #6a9c38;
            border-color: #6a9c38;
        }

    .action-btn.secondary {
        background: var(--color-light);
        color: var(--color-dark);
        border: 1px solid #dee2e6;
    }

        .action-btn.secondary:hover {
            background: #e9ecef;
            border-color: #adb5bd;
        }

    /* Валидация */
    .text-danger {
        color: #dc3545;
        font-size: 0.875rem;
        margin-top: 5px;
        display: block;
    }

    .input-validation-error {
        border-color: #dc3545 !important;
    }

        .input-validation-error:focus {
            box-shadow: 0 0 0 3px rgba(220, 53, 69, 0.25) !important;
        }

    /* Адаптивность */
    @@media (max-width: 768px) {
        .form-row {
            flex-direction: column;
            gap: 15px;
        }

        .form-card {
            padding: 20px 15px;
        }

        .form-actions {
            flex-direction: column;
        }

            .form-actions .action-btn {
                width: 100%;
                text-align: center;
            }
    }
</style>