@{
    Layout = "_Layout";
    var activePage = ViewData["ActivePage"] as string ?? ViewBag.ActivePage as string ?? "";
}

<div class="manager-dashboard-section">
    <!-- Добавить этот div -->
    <div class="container">
        <!-- Контейнер для центрирования -->
        <div class="admin-layout">
            <div class="admin-sidebar">
                <a asp-action="Users" asp-controller="Admin"
                   class="@(activePage == "Users" ? "active" : "")">
                    Пользователи
                </a>
                <a asp-action="Products" asp-controller="Admin"
                   class="@(activePage == "Products" ? "active" : "")">
                    Товары
                </a>
                <a asp-action="Services" asp-controller="Admin"
                   class="@(activePage == "Services" ? "active" : "")">
                    Услуги
                </a>
                <a asp-action="Orders" asp-controller="Admin"
                   class="@(activePage == "Orders" ? "active" : "")">
                    Все заказы
                </a>
            </div>

            <div class="admin-content">
                @RenderBody()
            </div>
        </div>
    </div>
</div>

