@using OKNODOM.DTOs.MeasurerDto
@model MeasurerDashboardViewModel

@{  
    ViewData["Title"] = "Панель управления замерщика";
}

<div class="measurer-dashboard-section">
    <div class="container">

        <div class="tabs-container">
            <div class="tabs">
                <a asp-action="MeasurerDashboard"
                   asp-controller="Account"
                   asp-route-tab="active"
                   class="tab @(Model.АктивнаяВкладка == "active" ? "active" : "")">
                    Активные замеры
                </a>
                <a asp-action="MeasurerDashboard"
                   asp-controller="Account"
                   asp-route-tab="completed"
                   class="tab @(Model.АктивнаяВкладка == "completed" ? "active" : "")">
                    Выполненные замеры
                </a>
            </div>
        </div>

        <div class="filters-section">
            <form method="get" asp-action="MeasurerDashboard" id="filterForm">
                <div class="filter-group">
                    <label>Дата с:</label>
                    <input type="date"
                           name="dateFrom"
                           value="@Model.ДатаС?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="filter-group">
                    <label>Дата по:</label>
                    <input type="date"
                           name="dateTo"
                           value="@Model.ДатаПо?.ToString("yyyy-MM-dd")" />
                </div>
                <a asp-action="MeasurerDashboard"
                   asp-controller="Account"
                   asp-route-tab="@Model.АктивнаяВкладка"
                   class="action-btn secondary"
                   id="resetBtn">Сбросить</a>
                <a asp-action="MeasurerDashboard" asp-controller="Account"
                   asp-route-tab="@Model.АктивнаяВкладка" class="action-btn secondary">Сбросить</a>     
            </form>

        </div>
        <div class="order-table-wrapper">
            @if (Model.Заказы.Any())
            {
                <table class="measurer-orders-table">
                    <thead>
                        <tr>
                            <th>№ Заказа</th>
                            <th>Дата замера</th>
                            <th>Клиент</th>
                            <th>Телефон</th>
                            <th>Адрес</th>
                            <th>Статус</th>
                            <th>Действия</th>
                        </tr>
                    
                    </thead>
                    <tbody>
                        @foreach(var order in Model.Заказы)
                        {
                           
                            <tr class="order-row">
                                <td data-label="№Заказа">
                                    <strong>#@order.КодЗаказа</strong>
                                </td>

                                <td data-label="Дата">
                                   
                                        <div class="date"> @(order.ДатаЗамера?.ToString("dd.MM.yyyy HH:mm"))</div>
                                
                                </td>
                                <td data-label="Клиент">
                                    <div class="client-info">
                                        <div class="client-name">@order.ФиоКлиента </div>
                                    </div>
                                </td>

                                <td data-label="Телефон">
                                    <a href="tel:@order.Телефон" class="phone-link">
                                        @order.Телефон
                                    </a>
                                </td>

                                <td data-label="Адрес" class="address-cell">
                                    <div class="address-text">@order.Адрес</div>
                                </td>
                                
                                <td data-label="Статус">
                                    <span class="status-tag">
                                        @order.Статус
                                    </span>
                                </td>

                                <td data-label="Действия">
                                    <div class="action-buttons">
                                        <a asp-controller="Measurer" asp-action="MeasureDetails" asp-route-id="@order.КодЗаказа"
                                        class="action-btn primary">Подробнее</a>
                                    </div>
                                </td>
                            </tr>
                        }
                     
                    </tbody>
                </table>
            }
            else
            {
                <div class="no-orders-message">
                    <h3>Нет заявок для обработок</h3>
                    <p>Можно отдохнуть</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filterForm = document.getElementById('filterForm');
            const dateFrom = document.getElementById('dateFrom');
            const dateTo = document.getElementById('dateTo');
            const resetBtn = document.getElementById('resetBtn');
  
            let debounceTimer;

            function submitFilterForm() {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => {

                    if (dateFrom.value && dateTo.value) {
                        const fromDate = new Date(dateFrom.value);
                        const toDate = new Date(dateTo.value);
                        
                        if (fromDate > toDate) {
                            alert('Дата "с" не может быть позже даты "по"');
                            return;
                        }
                    }

                    filterForm.submit();
                }, 500); 
            }

            if (dateFrom) {
                dateFrom.addEventListener('change', submitFilterForm);
                dateFrom.addEventListener('blur', submitFilterForm);
            }
            
            if (dateTo) {
                dateTo.addEventListener('change', submitFilterForm);
                dateTo.addEventListener('blur', submitFilterForm);
            }

            if (resetBtn) {
                resetBtn.addEventListener('click', function(e) {
                    e.preventDefault();
   
                    if (dateFrom) dateFrom.value = '';
                    if (dateTo) dateTo.value = '';

                    window.location.href = this.href;
                });
            }
        }
    </script>
    }
        
        
    

          

