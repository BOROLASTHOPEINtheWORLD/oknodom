@model OKNODOM.DTOs.LoginViewModel

@{
    ViewData["Title"] = "Вход в личныый кабинет";
}

<div class="login-section">
    <div>
        <div class="login-box">
            <h2 class="login-title">Вход в личный кабинет</h2>

            <form asp-action="Login" class="login-form">

                <div class="form-group">
                    <label asp-for="Логин" class="form-label">Логин</label>
                    <input type="text" asp-for="Логин" class="form-input">
                    <span asp-validation-for="Логин" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Пароль" class="form-label">Пароль</label>
                    <input type="password" asp-for="Пароль" class="form-input">
                    <span asp-validation-for="Пароль" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox-container">
                        <label class="checkbox-label">
                            <input asp-for="ЗапомнитьМеня" class="checkbox-input" />
                            <span class="checkbox-custom"></span>
                            <span class="checkbox-text">Запомнить меня</span>
                        </label>
                    </div>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <button type="submit" class="login-button">Войти</button>

            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}