@model OKNODOM.DTOs.ManagerDashboardViewModel

@{
    ViewData["Title"] = "Панель управления менеджера";
}

<div class="manager-dashboard-section">
    <div class="container">

        <div class="filters-section">
            <form method="get" asp-action="ManagerDashboard" id="filterForm">
                <div class="filter-group">
                    <label for="search">Поиск:</label>
                    <input type="text"
                           class="search-input"
                           id="search"
                           name="search"
                           value="@Model.Поиск" />
                </div>
                <div class="filter-group">
                    <label for="statusFilter">Статус:</label>
                    <select class="filter-select" id="statusFilter" name="statusFilter">
                        <option value="0" selected="@(Model.ВыбранныйСтатусКод == 0)">Все заявки</option>
                        @foreach(var status in Model.ВсеСтатусы)
                        {
                            <option value="@status.КодСтатусаЗаказа"
                                    selected="@(Model.ВыбранныйСтатусКод == status.КодСтатусаЗаказа)">
                             @status.Название</option>
                        }
                    </select>
                </div>
                <div class="filter-group">
                    <label>Сортировка:</label>
                    <select class="filter-select" id="sortFilter" name="sortFilter">
                        <option value="newest" selected="@(Model.Сортировка == "newest")">Сначала новые</option>
                        <option value="oldest" selected="@(Model.Сортировка == "oldest")">Сначала старые</option>
                    </select>
                </div>
                <a asp-action="ManagerDashboard"
                   class="action-btn primary"
                   id="resetBtn">Сбросить</a>
            </form>
        </div>


        <div class="order-table-wrapper">
            @if (Model.Заказы != null)
            {
                <table class="manager-orders-table">
                    <thead>
                        <tr>
                            <th>№ Заказа</th>
                            <th>Дата создания</th>
                            <th>Клиент</th>
                            <th>Телефон</th>
                            <th>Адрес</th>
                            <th>Статус</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Заказы)
                        {
                            <tr class="order-row" data-status="@order.КодСтатусаЗаказа">
                                <td data-label="№ Заказа">
                                    <strong>#@order.КодЗаказа</strong>
                                </td>
                                <td data-label="Дата">
                                    <div class="date-time">
                                        <div class="date">@order.ДатаСозданияЗаказа.ToString("dd.MM.yyyy")</div>
                                        <div class="time">@order.ДатаСозданияЗаказа.ToString("HH:mm")</div>
                                    </div>
                                </td>
                                <td data-label="Клиент">
                                    <div class="client-info">
                                        <div class="client-name">@order.КодКлиентаNavigation.Фамилия @order.КодКлиентаNavigation.Имя @order.КодКлиентаNavigation.Отчество</div>
                                    </div>
                                </td>
                                <td data-label="Телефон">
                                    <a href="tel:@order.КодКлиентаNavigation.Телефон" class="phone-link">
                                        @order.КодКлиентаNavigation.Телефон
                                    </a>
                                </td>
                                <td data-label="Адрес" class="address-cell">
                                    <div class="address-text">@order.Адрес</div>
                                </td>
                                <td data-label="Статус">
                                    <span class="status-tag">
                                        @order.КодСтатусаЗаказаNavigation.Название
                                    </span>
                                </td>
                                <td data-label="Действия">
                                    <div class="action-buttons">
                                        <a asp-controller="Manager" asp-action="OrderDetails" asp-route-id="@order.КодЗаказа"
                                           class="action-btn primary">Подробнее</a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="no-orders-message">
                    <h3>Нет заявок для обработки</h3>
                    <p>Можно одохнуть</p>
                </div>
            }
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const filterForm = document.getElementById('filterForm');
            const searchInput = document.getElementById('search');
            const statusFilter = document.getElementById('statusFilter');
            const sortFilter = document.getElementById('sortFilter');
            const resetBtn = document.getElementById('resetBtn');

            let debounceTimer;

            function submitFilterForm() {
                clearTimeout(debounceTimer);
                debounceTimer = setTimeout(() => {
                    filterForm.submit();
                }, 500); 
            }


            if (searchInput) {
                let searchTimer;
                searchInput.addEventListener('input', function() {
                    clearTimeout(searchTimer);
                    searchTimer = setTimeout(submitFilterForm, 800);
                });

            }

            if (statusFilter) {
                statusFilter.addEventListener('change', submitFilterForm);
            }

            if (sortFilter) {
                sortFilter.addEventListener('change', submitFilterForm);
            }

            if (resetBtn) {
                resetBtn.addEventListener('click', function(e) {
                    e.preventDefault();

                    // Очищаем все поля
                    if (searchInput) searchInput.value = '';
                    if (statusFilter) statusFilter.value = '0';
                    if (sortFilter) sortFilter.value = 'newest';

                    // Отправляем форму
                    filterForm.submit();
                });
            }

        });


    </script>
}